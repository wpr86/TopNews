<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mv_root_layout_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/cantiner_padding_left"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/mv_desc_6"
        style="@style/NewsTitle"
        android:layout_marginRight="@dimen/cantiner_padding_right" />

    <ImageView
        android:id="@+id/mv_large_image_6"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginRight="@dimen/cantiner_padding_right"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41.3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/cantiner_padding_right">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mv_type_6"
                    style="@style/NewsType"
                    android:text="@string/expend" />

                <TextView
                    android:id="@+id/mv_title_6"
                    style="@style/NewsSource"
                    android:maxWidth="160dp" />
            </LinearLayout>

            <com.qihoo360.newssdk.ui.common.TextProgressBar
                android:id="@+id/mv_progress_6"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:indeterminateOnly="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mv_ignore_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="-15dp">

            <ImageView
                android:layout_width="18.7dp"
                android:layout_height="13.3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="18.7dp"
                android:layout_marginTop="14dp"
				android:layout_marginBottom="14dp"
                android:background="@drawable/newssdk_icon_close_1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>