<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/cantiner_padding_left"
		android:layout_marginRight="@dimen/cantiner_padding_right"
		android:paddingLeft="@dimen/cantiner_padding_left"
		android:paddingRight="@dimen/cantiner_padding_right"
		android:gravity="center_vertical"
		android:layout_marginBottom="10dp" >
            
        <TextView
            android:id="@+id/card_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:ellipsize="end" />
	        
        <TextView
            android:id="@+id/card_title_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#248cd5"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone" />
    </LinearLayout>
</merge>