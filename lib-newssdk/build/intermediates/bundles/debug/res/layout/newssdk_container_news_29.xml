<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_root_layout_29"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/news_videocontainer_29"
        android:layout_width="fill_parent"
        android:layout_height="144dp"
        android:background="#000000" >

        <ImageView
            android:id="@+id/news_image_29A"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/news_title_29"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/newssdk_video_bg_21"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/news_video_num_29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/news_title_29"
            android:layout_marginTop="40dp"
            android:paddingLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/news_display_29"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/news_fromcontainer_29"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp" >

            <ImageView
                android:id="@+id/news_fromicon_29"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp" />

            <TextView
                android:id="@+id/news_source_29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15dp" />
            
            <TextView 
                android:id="@+id/tv_news_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_zhuanti_top"
                android:padding="2dp"
                android:textSize="10dp"
                android:textColor="#dd1a10"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/news_times_watched_29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="28dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/newssdk_share_29"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="16dp"
                android:paddingRight="18dp" >

                <ImageView
                    android:id="@+id/newssdk_shareImageBtn_29"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/newssdk_icon_videoshare" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>