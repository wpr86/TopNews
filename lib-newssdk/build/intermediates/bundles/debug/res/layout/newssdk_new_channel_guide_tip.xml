<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newssdk_new_channel_guide_root"
    android:layout_width="82dp"
    android:layout_height="36dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginRight="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/newssdk_new_channel_guide_tip" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:background="@drawable/newssdk_new_channel_guide_tips_bg"
            android:gravity="center"
            android:text="@string/newssdk_new_channel_guide_tips"
            android:textColor="#ffffff"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>