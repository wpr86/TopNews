<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_marginTop="12dip"
        android:id="@+id/app_info_comment_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <View
            android:layout_width="3dip"
            android:layout_height="13dip"
            android:layout_marginRight="8dip"
            android:background="#ff7a31"
            />

        <TextView
            android:id="@+id/app_info_comment_score_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_info_comment_score_title_text"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/app_info_title_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_info_comment_score_total_score_ll"
        android:layout_marginTop="10dip"
        android:layout_width="113dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/app_info_comment_score_title"
        >
        <TextView
            android:id="@+id/app_info_comment_score_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="#ffaf31"
            android:textSize="30dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:textColor="#ffaf31"
            android:textSize="14dip"
            android:text="@string/minute"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="3dip"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/app_info_comment_score_total_count"
        android:layout_width="113dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_info_comment_score_total_score_ll"
        android:layout_marginTop="8dip"
        android:textColor="#8d8d8d"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="12dip"
        />

    <View
         android:id="@+id/app_info_comment_score_sep"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#e2e2e2"
    android:layout_below="@id/app_info_comment_score_total_count"
    android:layout_marginTop="12dp"
    />

    <LinearLayout
        android:id="@+id/app_info_comment_score_star"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/app_info_comment_score_total_score_ll"
        android:layout_marginTop="12dip"
        android:layout_above="@id/app_info_comment_score_sep">

        <include
            android:id="@+id/app_info_comment_score_content_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/newssdk_appdetail_app_info_score_item"
            android:layout_weight="1"/>

        <include
            android:id="@+id/app_info_comment_score_content_2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/newssdk_appdetail_app_info_score_item"
            android:layout_weight="1"/>

        <include
            android:id="@+id/app_info_comment_score_content_3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/newssdk_appdetail_app_info_score_item"
            android:layout_weight="1"
            />

        <include
            android:id="@+id/app_info_comment_score_content_4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/newssdk_appdetail_app_info_score_item"
            android:layout_weight="1"
            />

        <include
            android:id="@+id/app_info_comment_score_content_5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/newssdk_appdetail_app_info_score_item"
            android:layout_weight="1"
            />
    </LinearLayout>
</merge>