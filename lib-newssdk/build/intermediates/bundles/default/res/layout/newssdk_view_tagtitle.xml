<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/cantiner_padding_left"
    android:paddingRight="@dimen/cantiner_padding_right"
    android:gravity="center_vertical" >
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        	<TextView
        		android:id="@+id/webnative_tag_title"
            	android:layout_height="wrap_content"
            	android:textSize="16sp"
            	android:textColor="#212121"
            	android:layout_width="wrap_content"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
            	android:gravity="center_vertical|left"
				android:layout_gravity="center_vertical"
            	android:text="@string/app_info_tag_text" />

		<View
			android:id="@+id/webnative_tag_divider_force"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#19b955" />
    </LinearLayout>
    <View
		android:id="@+id/webnative_tag_divider"
		android:layout_height="0.5dp"
        android:layout_width="0dp"
		android:layout_weight="1"
        android:background="#e7e7e7"
		android:layout_gravity="bottom"
        />
    

</LinearLayout>
