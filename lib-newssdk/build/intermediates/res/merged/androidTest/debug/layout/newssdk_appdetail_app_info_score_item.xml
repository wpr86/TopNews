<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/app_info_comment_score_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <ProgressBar
        android:id="@+id/app_info_comment_score_pg"
        android:layout_width="wrap_content"
        android:layout_height="4dip"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/newssdk_appdetail_progress_horizontal_appinfo_score"
        android:max="100"
        android:layout_toLeftOf="@+id/app_info_comment_score_tv"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/app_info_comment_score_img"
        android:layout_marginLeft="5dip"
        android:background="#eaf0f0"
        android:progress="50"
        />

    <TextView
        android:id="@+id/app_info_comment_score_tv"
        android:layout_width="66dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:textSize="12dip"
        android:textColor="#8d8d8d"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>