<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_14"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="@dimen/cantiner_padding_left"
		android:paddingRight="@dimen/cantiner_padding_right"
		android:paddingTop="11.5dp"
		android:paddingBottom="11.5dp">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:orientation="horizontal" >

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<ImageView
					android:id="@+id/app_default_image_14"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:scaleType="centerCrop"
					android:layout_gravity="center_vertical" />
			</RelativeLayout>

			<LinearLayout
				android:layout_marginLeft="12dp"
				android:layout_marginRight="12dp"
				android:layout_width="0dp"
				android:layout_weight="1.0"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/app_name_14"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/common_font_size_e"
					android:textColor="#3b3b3b"
					android:singleLine="true"
					android:ellipsize="end" />

				<TextView
					android:id="@+id/app_install_14"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/common_font_size_g"
					android:textColor="@color/common_font_color_3"
					android:singleLine="true"
					android:ellipsize="end" />

				<TextView
					android:id="@+id/app_ad_title_14"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"
					android:textSize="@dimen/common_font_size_g"
					android:textColor="@color/common_font_color_7"
					android:singleLine="true"
					android:ellipsize="end" />

				<TextView
					android:id="@+id/app_ad_desc_14"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/common_font_size_g"
					android:textColor="@color/common_font_color_3"
					android:singleLine="true"
					android:ellipsize="end" />
			</LinearLayout>

			<com.qihoo360.newssdk.ui.common.TextProgressBar
				android:id="@+id/app_progress_14"
				android:layout_width="74dp"
				android:layout_height="28dp"
				android:indeterminateOnly="false"
				android:layout_gravity="center_vertical" />
		</LinearLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

			<ImageView
				android:id="@+id/app_large_image_14"
				android:layout_width="match_parent"
				android:layout_height="170dp"
				android:scaleType="centerCrop" />

			<ImageView
				android:layout_width="18dp"
				android:layout_height="10dp"
				android:layout_marginLeft="3dp"
				android:layout_marginTop="3dp"
				android:src="@drawable/newssdk_app_ad_tip" />
		</RelativeLayout>

		<TextView
			android:id="@+id/app_short_desc_14"
			android:layout_width="fill_parent"
			android:layout_height="34dp"
			android:layout_marginTop="-34dp"
			android:maxLines="1"
			android:ellipsize="end"
			android:padding="8dp"
			android:textColor="@color/common_bg_white"
			android:background="#99000000" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/app_ignore_14"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_alignParentRight="true"
		android:paddingLeft="10dp"
		android:paddingBottom="10dp"
		android:gravity="right|center_vertical" >

		<ImageView
			android:layout_width="14dp"
			android:layout_height="14dp"
			android:background="@drawable/newssdk_icon_close_2"
			android:layout_gravity="right|center_vertical" />
	</LinearLayout>
</RelativeLayout>