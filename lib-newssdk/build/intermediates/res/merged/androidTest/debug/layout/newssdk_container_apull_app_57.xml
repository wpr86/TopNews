<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >
            
            <View
                android:id="@+id/iv_temp"
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/common_font_color_5" />

            <TextView
                android:id="@+id/app_short_desc_57"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/common_font_color_2"
                android:textSize="@dimen/common_font_size_f"
                android:singleLine="true"
                android:ellipsize="end" />
            
            <LinearLayout
	            android:id="@+id/app_ignore_57"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="horizontal"
	            android:paddingLeft="4dp"
	            android:layout_gravity="center_vertical" >
	            
	            <ImageView
		        	android:layout_width="18.7dp"
					android:layout_height="13.3dp"
					android:layout_marginRight="3.7dp"
					android:background="@drawable/newssdk_icon_close_1"
					android:layout_gravity="right|center_vertical" />
	        </LinearLayout>
        </LinearLayout>

        <com.qihoo360.newssdk.ui.common.CommonRippleLinearLayout
            android:id="@+id/root_layout_57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <ImageView
                android:id="@+id/app_large_image_57"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:scaleType="centerCrop"
                android:src="@color/common_bg_gray3" />
        </com.qihoo360.newssdk.ui.common.CommonRippleLinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:id="@+id/app_progress_57_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >
	            
	            <com.qihoo360.newssdk.ui.common.TextProgressBar
		            android:id="@+id/app_progress_57"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:indeterminateOnly="false" />
	            
	            <ImageView
	                android:id="@+id/app_progress_57_right"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:scaleType="fitXY"
	                android:layout_gravity="center_vertical"
	                android:src="@drawable/newssdk_icon_right_arrow"
	                android:layout_marginLeft="6.5dp" />
	        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/app_progress_57_layout"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_long_desc_57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/common_font_color_3"
                    android:textSize="@dimen/common_font_size_f"
                    android:ellipsize="end" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

</LinearLayout>