<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apull_news_layout_1002"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/cantiner_padding_left"
    android:paddingRight="@dimen/cantiner_padding_right"
    android:paddingTop="11.5dp"
    android:paddingBottom="11.5dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/apull_news_title_1002"
            style="@style/NewsTitle"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/apull_news_bottom_group"
            android:layout_below="@id/apull_news_title_1002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/apull_news_display_1002"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/apull_news_type_1002"
                    style="@style/NewsType" />
                
                <TextView
                    android:id="@+id/apull_news_source_1002"
                    style="@style/NewsSource" />

                <TextView
                    android:id="@+id/apull_news_time_1002"
                    style="@style/NewsTime" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apull_news_ignore_1002"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
                android:layout_marginLeft="-21dp"
	            android:gravity="right|center_vertical"  >

                <ImageView
                    android:layout_width="18.7dp"
                    android:layout_height="13.3dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/newssdk_icon_close_1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/apull_news_image_1002A"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/apull_news_imagenum_1002"
            style="@style/NewsImgNum" />
    </FrameLayout>

</LinearLayout>