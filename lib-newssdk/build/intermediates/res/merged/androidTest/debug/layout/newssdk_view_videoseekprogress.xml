<?xml version="1.0" encoding="utf-8"?>
<com.qihoo360.newssdk.video.widget.VideoSeekProgressView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="177dp"
    android:layout_height="69dp"
    android:background="#66000000"
    android:orientation="vertical"
    android:gravity="center" >
    <LinearLayout android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/vsp_directionlogov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/newssdk_ic_fastdirection_selector"
            android:layout_marginRight="10dp"
            />
        <TextView android:id="@+id/vsp_currenttimev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView android:id="@+id/vsp_durationv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <ProgressBar  android:id="@+id/vsp_progressbar"
        android:layout_width="130dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        style="@style/ProgressBar_Mini"/>



</com.qihoo360.newssdk.video.widget.VideoSeekProgressView>
