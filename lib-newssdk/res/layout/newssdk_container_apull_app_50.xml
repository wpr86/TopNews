<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_50"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/cantiner_padding_left"
    android:paddingRight="@dimen/cantiner_padding_right"
    android:paddingTop="11.5dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="81.5dp"
        android:layout_weight="2"
        android:paddingRight="5dp" >

        <TextView
	        android:id="@+id/app_short_desc_50"
	        android:layout_alignParentTop="true"
	        style="@style/NewsTitle"
	        android:layout_marginTop="-1dp" />

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:gravity="center_vertical"
			android:layout_marginTop="-4dp">
	
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
				android:paddingBottom="7.5dp">
	
	            <TextView
		            android:id="@+id/app_type_50"
		            style="@style/NewsType"
		            android:text="@string/expend" />
	            
		        <TextView
		            android:id="@+id/app_name_50"
		            style="@style/NewsSource"
		            android:layout_width="0dp"
		            android:layout_weight="1" />
		        
		        <com.qihoo360.newssdk.ui.common.TextProgressBar
		            android:id="@+id/app_progress_50"
		            android:layout_width="60dp"
		            android:layout_height="22dp"
		            android:indeterminateOnly="false" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/app_ignore_50"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
                
                <ImageView
				    android:layout_width="18.7dp"
				    android:layout_height="13.3dp"
					android:layout_marginLeft="9dp"
				    android:layout_marginRight="12dp"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="15.5dp"
				    android:background="@drawable/newssdk_icon_close_1" />
            </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_right_image_50"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:layout_marginLeft="6dp" >

        <ImageView
	        android:id="@+id/app_default_image_50"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:scaleType="centerCrop"
	        android:layout_centerInParent="true"
         />
    </RelativeLayout>
</LinearLayout>
