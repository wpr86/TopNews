<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_51"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

	    <ImageView
            android:id="@+id/app_default_image_51"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/app_name_51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/common_font_size_e"
        android:textColor="#3b3b3b"
        android:singleLine="true"
        android:ellipsize="end" />
    
    <com.qihoo360.newssdk.ui.common.TextProgressBar
        android:id="@+id/app_progress_51"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:indeterminateOnly="false" />
</LinearLayout>