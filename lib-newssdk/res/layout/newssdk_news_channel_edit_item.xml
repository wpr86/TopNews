<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/category_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#1f1f1f"
        android:singleLine="true"
        android:ellipsize="none"
        android:background="@drawable/newssdk_news_channel_edit_bg"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp" 
        />
    
    <ImageView
        android:id="@+id/category_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/newssdk_icon_close_news_channel"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/iv_channel_reddot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:src="@drawable/newssdk_channel_red_dot"
        />
</RelativeLayout>